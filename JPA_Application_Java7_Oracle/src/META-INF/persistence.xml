<persistence version="2.1"
xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

  <persistence-unit name="LOCAL_PERSISTENCE">   
   <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <properties>
   			<property name="javax.persistence.jdbc.driver" value="oracle.jdbc.driver.OracleDriver"></property>
           <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@10.191.74.66:1521:XE"></property>
           <property name="javax.persistence.jdbc.user" value="jpa_oracle"></property>
           <property name="javax.persistence.jdbc.password" value="oracle"></property>
           <property name="hibernate.show_sql" value="true" />
     	   <property name="hibernate.hbm2ddl.auto" value="create" />
    </properties>
  </persistence-unit>
</persistence>